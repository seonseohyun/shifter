<Application x:Class="ShifterUser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShifterUser.Helpers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- 컨버터 등록 -->
        <local:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />

        <Style x:Key="BlueWatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#2A2A2A"/>
            <!-- 입력된 텍스트 색 -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Noto Sans KR"/>
            <Setter Property="Padding" Value="12,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- 실제 TextBox -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Background="{TemplateBinding Background}" />

                            <!-- 워터마크 Text -->
                            <TextBlock Text="{TemplateBinding Tag}"
                               FontSize="{TemplateBinding FontSize}"
                               FontFamily="{TemplateBinding FontFamily}"
                               Foreground="#0080EB"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
