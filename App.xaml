<Application x:Class="Shifter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Shifter.Helpers"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <!-- Converters -->
        <local:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <local:ZeroToVisConv x:Key="ZeroToVisibility"/>
        <local:EqualityConverter x:Key="EqualityConverter" />
        <local:ShiftCountLookupConverter x:Key="ShiftCountLookupConverter"/>
        <local:JoinConverter x:Key="JoinConverter" />
        <local:BoolToBoldConverter x:Key="boolToBoldConverter"/>

        <!-- Style Gray Watermark -->
        <Style x:Key="GrayWatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#2A2A2A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}" />
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#A7A7A7"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.Length,
                                            RelativeSource={RelativeSource TemplatedParent},
                                            Converter={StaticResource ZeroToVisibility}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 둥근 모서리 버튼 스타일 - L-->
        <Style x:Key="LargeRoundedBlueButtonStyle"   TargetType="Button">
            <Setter Property="Foreground"       Value="White"/>
            <Setter Property="FontSize"         Value="15"/>
            <Setter Property="FontWeight"       Value="Bold"/>
            <Setter Property="Background"       Value="#002EFF"/>
            <Setter Property="BorderBrush"      Value="Transparent"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0026D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#001EA7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- 둥근 모서리 버튼 스타일 - M-->
