<Page x:Class="ShifterUser.Views.TeamCodeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Width="400" Height="800"
      Background="#D4DCE5"
      FontFamily="Noto Sans KR">

    <Grid>
        <Border Width="350" Height="350"
                Background="White"
                CornerRadius="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <!-- X 버튼 -->
                <Button Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" BorderThickness="0"
                        Command="{Binding CloseCommand}">
                    <Image Source="/Resources/Images/x.png" Stretch="Uniform"/>
                </Button>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="240">

                    <!-- 팀 아이콘 -->
                    <Image Source="/Resources/Images/teamimg.png"
                           Width="174" Height="86"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>

                    <!-- 제목 -->
                    <TextBlock Text="팀 코드 입력"
                               FontSize="18" FontWeight="Bold"
                               TextAlignment="Center" Margin="0,0,0,20"/>

                    <!-- 텍스트박스 (플레이스홀더 대체) -->
                    <Grid Margin="0,0,0,10">
                        <TextBox Height="40" FontSize="14" 
                                 Text="{Binding TeamCode, UpdateSourceTrigger=PropertyChanged}"
                                 Name="TeamCodeBox" Width="300" Margin="-25,0,-35,0"/>
                        <TextBlock Text="팀 코드"
                                   FontSize="13"
                                   Foreground="Gray"
                                   Margin="-11,0,21,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, ElementName=TeamCodeBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <!-- 참여 버튼 (Border로 둥글게) -->
                    <Border CornerRadius="22" Background="#007BFF" Margin="0,0,0,10">
                        <Button Content="팀 참여하기"
                                Height="40" FontSize="15" 
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding JoinTeamCommand}" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- 안내 텍스트 -->
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="관리자로부터 전달받은 팀 코드를 입력하세요"
                                   FontSize="12" Foreground="Gray"
                                   TextAlignment="Center"/>
                        <TextBlock Text="올바른 코드 입력 시 자동으로 팀에 소속됩니다"
                                   FontSize="12" Foreground="Gray"
                                   TextAlignment="Center"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
