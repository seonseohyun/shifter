<Page x:Class="ShifterUser.Views.GroupDashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FontFamily="Noto Sans KR"
      Width="400" Height="800"
      Background="White">

    <Page.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="Black"
                          ShadowDepth="5"
                          BlurRadius="10"
                          Opacity="0.5"/>
    </Page.Resources>

    <Grid>

        <!-- 상단바 -->
        <Border Background="#007AFF" Height="56" VerticalAlignment="Top">
            <Grid>
                <Button Content="＜"
                        Command="{Binding GoBackCommand}"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        Style="{StaticResource RoundedBlueButtonStyle}"
                        VerticalAlignment="Center" Margin="4,0,0,0"/>
                <TextBlock Text="공지사항"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 콘텐츠 카드 -->
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="27,215,0,0">
            <!-- 그림자용 Border (배경만 있고 콘텐츠 없음) -->
            <Border Width="350" Height="Auto" CornerRadius="20" Margin="0,-77,0,38"
            Background="White"
            Effect="{StaticResource ShadowEffect}"/>

            <!-- 실제 콘텐츠 Border -->
            <Border Width="350" Padding="16"          
            BorderThickness="1"
            CornerRadius="20" Margin="0,-77,0,38"
            Background="White"
            BorderBrush="#DDDDDD" Height="500">

                <StackPanel>

                    <!-- 상단 텍스트박스 -->
                    <TextBlock Text="{Binding TopTeamName}" FontSize="21" FontWeight="Bold" Margin="0,10,0,20" TextAlignment="Center"/>

                    <!-- 팀 선택 콤보박스 -->
                    <ComboBox 
                    ItemsSource="{Binding Teams}"
                    SelectedItem="{Binding SelectedTeam, Mode=TwoWay}"
                    Height="36" FontSize="14" Margin="0,0,0,25"
                    Padding="8,0" VerticalContentAlignment="Center" Width="310"/>


                    <!-- 버튼 2개 -->
                    <UniformGrid Columns="2" Margin="0,0,0,20">
                        <Button Height="120" Width="150" Command="{Binding GoToNoticeCommand}" >
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="1" BorderBrush="#007AFF" Background="#007AFF" CornerRadius="12">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Source="/Resources/images/WhiteBell.png" Width="40" Height="40" Margin="0,10,0,9"/>
                                            <TextBlock Text="공지사항 보기" FontWeight="Bold" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Margin="4" Height="120" Width="150" Command="{Binding GoToHandoverCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderThickness="2" BorderBrush="#007AFF" Background="White" CornerRadius="12">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Source="/Resources/images/Doc.png" Width="35" Height="35" Margin="10"/>
                                            <TextBlock Text="인수인계 보기" FontWeight="Bold" Foreground="#007AFF" FontSize="16" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="22"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </UniformGrid>

                    <!-- 팀원 근무 일정 -->
                    <TextBlock Text="팀원 근무 일정" FontWeight="Bold" Margin="0,0,0,15" FontSize="16"/>
                    <Border Background="White" CornerRadius="12">
                        <Grid Margin="0,4,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Column="0" Text="" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="1" Text="월" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="2" Text="화" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="3" Text="수" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="4" Text="목" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="5" Text="금" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="6" Text="토" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>
                            <TextBlock Grid.Column="7" Text="일" FontWeight="Bold" FontSize="14" TextAlignment="Center" Background="#E0F4FF" Padding="0,6"/>

                            <!-- Data Rows -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding TeamMember1.Name}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TeamMember1.Mon}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding TeamMember1.Tue}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding TeamMember1.Wed}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding TeamMember1.Thu}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding TeamMember1.Fri}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding TeamMember1.Sat}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="7" Text="{Binding TeamMember1.Sun}" TextAlignment="Center" Padding="0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding TeamMember2.Name}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TeamMember2.Mon}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding TeamMember2.Tue}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding TeamMember2.Wed}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding TeamMember2.Thu}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="5" Text="{Binding TeamMember2.Fri}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="6" Text="{Binding TeamMember2.Sat}" TextAlignment="Center" Padding="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="7" Text="{Binding TeamMember2.Sun}" TextAlignment="Center" Padding="0,6"/>
                        </Grid>
                    </Border>

                    <!-- 전체 근무표 보기 -->
                    <Button HorizontalAlignment="Right" Margin="0,16,0,0" Width="160" Height="44"
                            FontSize="14" FontWeight="Bold"
                            Foreground="#007AFF" Background="Transparent"
                            BorderBrush="#007AFF" BorderThickness="1"
                            Command="{Binding GoToFullScheduleCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="2" BorderBrush="#007AFF" Background="Transparent" CornerRadius="22">
                                    <TextBlock Text="전체 근무표 보기 →"
                                               Foreground="#007AFF"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="22"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
        <!-- 이미지로 대체된 제목 -->
        <Image Source="/Resources/images/Logo.png"
                       Width="100"
                       Height="100"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Stretch="Uniform" Margin="0,700,0,0" RenderTransformOrigin="0,3.07"/>
    </Grid>

</Page>