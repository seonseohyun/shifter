<Page x:Class="ShifterUser.Views.MyReqStatusView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:ShifterUser.Converters"
      mc:Ignorable="d"
      Background="White"
      Width="400" Height="800"
      FontFamily="Noto Sans KR" Loaded="Page_Loaded">

    <Page.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          Color="Black"
                          Direction="270"
                          ShadowDepth="10"
                          BlurRadius="6"
                          Opacity="0.5"/>
        <conv:ApprovedOrRejectedVisibilityConverter x:Key="ApprovedOrRejectedVisibilityConverter"/>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 네비게이션 바 -->
        <Border Background="#007AFF" Height="48" Width="400" Grid.Row="0">
            <Button Command="{Binding GoBackCommand}"
                    Background="Transparent" BorderThickness="0"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Padding="12,0,0,9" Cursor="Hand">
                <TextBlock Text="&lt;" FontSize="22" Foreground="White"/>
            </Button>
        </Border>

        <!-- 본문 -->
        <Grid Grid.Row="1" Margin="16,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 그림자 Layer -->
            <Border Background="White" CornerRadius="20" Effect="{StaticResource CardShadow}"/>

            <!-- 콘텐츠 Layer -->
            <Border Background="White"
                    CornerRadius="20"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 스크롤 콘텐츠 -->
                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Hidden"
                                  CanContentScroll="False">
                        <StackPanel>
                            <TextBlock Text="내 근무 요청 현황 보기"
                                       FontSize="22" FontWeight="Bold"
                                       Margin="10,10,0,30"/>

                            <!-- 연도/월 선택 -->
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,30" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <ComboBox Width="135" Height="25" FontSize="14"
                                              ItemsSource="{Binding Years}"
                                              SelectedItem="{Binding SelectedYear}"/>
                                    <TextBlock Text="년" Margin="5,0,10,0" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <ComboBox Width="135" Height="25" FontSize="14"
                                              ItemsSource="{Binding Months}"
                                              SelectedItem="{Binding SelectedMonth}"/>
                                    <TextBlock Text="월" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 요청 리스트 -->
                            <ItemsControl ItemsSource="{Binding Requests}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Margin="5,0,5,10"
                                            Padding="10,14">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick"
                                              Command="{Binding DataContext.ShowRequestDetailCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                              CommandParameter="{Binding}"/>    
                                            </Border.InputBindings>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                        <TextBlock Text="{Binding RequestDate, StringFormat=yyyy.MM.dd}" FontWeight="Bold" FontSize="15"/>
                                                        <Border Background="#F5F5F5" CornerRadius="10" Margin="5,0,0,0" Padding="5,0">
                                                            <TextBlock Text="{Binding ShiftType}" FontSize="12"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <!-- 줄바꿈 추가 -->
                                                    <TextBlock Text="{Binding Reason}" 
                                                       FontSize="13" 
                                                       Foreground="Gray"
                                                       TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Image Width="16" Height="16"
                                                       Source="{Binding Status, Converter={StaticResource StatusToIconConverter}}"
                                                       Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding StatusText}"
                                                    FontWeight="Bold" FontSize="14"
                                                    Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>       
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 하단 고정 버튼 -->
                    <Border Grid.Row="1"
                    Margin="0,10,0,10"
                    CornerRadius="22"
                    Background="#007AFF"
                    Height="44"
                    VerticalAlignment="Bottom">

                        <Button Content="근무 희망 일정 요청하기"
                        Style="{StaticResource RoundedBlueButtonStyle}"
                        Command="{Binding GoToReqScheCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="17"
                        FontWeight="Bold"/>
                    </Border>

                    <!-- 팝업 -->
                    <Grid Visibility="{Binding IsDetailVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="179*"/>
                            <RowDefinition Height="444*"/>
                        </Grid.RowDefinitions>
                        <Rectangle Fill="#80000000" MouseDown="DetailBackground_MouseDown" Margin="-39,-82,-33,-97" Grid.RowSpan="2"/>

                        <Border Background="White" CornerRadius="25,25,0,0" Padding="24" Margin="-31,180,-33,-97" Grid.Row="1">
                            <StackPanel HorizontalAlignment="Center" Height="312" VerticalAlignment="Bottom">
                                <Rectangle Height="6" Width="60" Fill="LightGray" RadiusX="3" RadiusY="3"
                                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                                <Image Width="55" Height="55" Margin="0,0,0,15"
                                       Source="{Binding SelectedRequest.Status, Converter={StaticResource StatusToIconConverter}}"/>

                                <TextBlock FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,15" Width="334">
                                    <Run Text="{Binding SelectedRequest.RequestDate, StringFormat={}{0:MM월 dd일}}"/>
                                    <Run Text=" 근무 요청 결과"/>
                                </TextBlock>

                                <!-- 요청 상세 정보 회색 카드 -->
                                <Border Background="#F5F5F5"
                                    CornerRadius="10"
                                    Padding="12"
                                    Margin="0,0,0,10">
                                    <StackPanel>

                                        <TextBlock FontSize="14" TextWrapping="Wrap" Margin="0,0,0,5">
                                            <Run Text="요청 근무 유형: "/>
                                            <Run Text="{Binding SelectedRequest.ShiftType}"/>
                                        </TextBlock>

                                        <TextBlock FontSize="14" TextWrapping="Wrap" Margin="0,0,0,5">
                                            <Run Text="작성 사유: "/>
                                            <Run Text="{Binding SelectedRequest.Reason}"/>
                                        </TextBlock>

                                        <TextBlock FontSize="14" TextWrapping="Wrap" Foreground="Gray"
                                             Visibility="{Binding SelectedRequest.Status, Converter={StaticResource RejectOnlyVisibilityConverter}}">
                                            <Run Text="반려 사유: "/>
                                            <Run Text="{Binding SelectedRequest.RejectionReason}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- 취소하기 버튼 (Pending 전용) -->
                                <Border CornerRadius="22"
                                    Height="44" Width="332"
                                    Background="#007AFF"
                                    Visibility="{Binding SelectedRequest.Status, Converter={StaticResource PendingOnlyVisibilityConverter}}"
                                    Margin="0,10,0,0">
                                    <Button Content="취소하기"
                                        FontSize="15" FontWeight="Bold" Foreground="White"
                                        Background="Transparent" BorderThickness="0"
                                        Style="{StaticResource RoundedBlueButtonStyle}"
                                        Command="{Binding CancelRequestCommand}"/>
                                     
                                </Border>

                                <!-- 확인 버튼 (Approved, Rejected 전용) -->
                                <Border CornerRadius="22"
                                    Height="44" Width="332"
                                    Background="#007AFF"
                                    Visibility="{Binding SelectedRequest.Status, Converter={StaticResource ApprovedOrRejectedVisibilityConverter}}"
                                    Margin="0,10,0,0">
                                    <Button Content="확인"
                                        FontSize="15" FontWeight="Bold" Foreground="White"
                                        Background="Transparent" BorderThickness="0"
                                        Style="{StaticResource RoundedBlueButtonStyle}"
                                        Command="{Binding CloseDetailCommand}"/>
                                </Border>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
