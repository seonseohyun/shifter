<Page x:Class="ShifterUser.Views.MyReqStatusView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:ShifterUser.Converters"
      mc:Ignorable="d"
      Background="White"
      Width="400" Height="800"
      FontFamily="Noto Sans KR" Loaded="Page_Loaded">

    <Page.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          Color="Black"
                          Direction="270"
                          ShadowDepth="10"
                          BlurRadius="6"
                          Opacity="0.5"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 네비게이션 바 -->
        <Border Background="#007AFF" Height="48" Width="400" Grid.Row="0">
            <Button Command="{Binding GoBackCommand}"
                    Background="Transparent" BorderThickness="0"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Padding="12,0,0,9" Cursor="Hand">
                <TextBlock Text="&lt;" FontSize="22" Foreground="White"/>
            </Button>
        </Border>

        <!-- 본문 -->
        <Grid Grid.Row="1" Margin="16,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 그림자 Layer -->
            <Border Background="White" CornerRadius="20" Effect="{StaticResource CardShadow}"/>

            <!-- 콘텐츠 Layer -->
            <Border Background="White"
                    CornerRadius="20"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 스크롤 콘텐츠 -->
                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Hidden"
                                  CanContentScroll="False">
                        <StackPanel>

                            <!-- 타이틀 -->
                            <TextBlock Text="내 근무 요청 현황 보기"
                                       FontSize="22" FontWeight="Bold"
                                       Margin="10,10,0,15"/>

                            <!-- 연도/월 선택 -->
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,10" VerticalAlignment="Center">
                                <!-- 연도 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <ComboBox Width="135" Height="25" FontSize="14"
                                      ItemsSource="{Binding Years}"
                                      SelectedItem="{Binding SelectedYear}"/>
                                    <TextBlock Text="년" Margin="5,0,10,0" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>

                                <!-- 월 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <ComboBox Width="135" Height="25" FontSize="14"
                                      ItemsSource="{Binding Months}"
                                      SelectedItem="{Binding SelectedMonth}"/>
                                    <TextBlock Text="월" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 요청 리스트 -->
                            <ItemsControl ItemsSource="{Binding Requests}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Margin="5,0,5,10"
                                            Padding="10,14">
                                            <!-- 상하 Padding 증가 -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 왼쪽 정보 -->
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                        <TextBlock Text="{Binding RequestDate, StringFormat=yyyy.MM.dd}"
                                                        FontWeight="Bold" FontSize="15"/>
                                                        <Border Background="#F5F5F5" CornerRadius="10" Margin="5,0,0,0" Padding="5,0">
                                                            <TextBlock Text="{Binding ShiftType}" FontSize="12"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Reason}" FontSize="13" Foreground="Gray"/>
                                                </StackPanel>

                                                <!-- 오른쪽 상태 -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Image Width="16" Height="16" Source="{Binding Status, Converter={StaticResource StatusToIconConverter}}" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding StatusText}" FontWeight="Bold" FontSize="14"
                                                    Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- 하단 고정 버튼 -->
                    <Border Grid.Row="1" Margin="0,10,0,10" CornerRadius="22"
                            Background="#007AFF" Height="44">
                        <Button Content="+ 근무 희망 일정 요청하기"
                                FontSize="17"
                                FontWeight="Bold"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Command="{Binding GoToReqScheCommand}"/>
                    </Border>

                    <!-- 팝업 배경 + 카드 -->
                    <Grid Grid.RowSpan="2"
                       Visibility="{Binding IsDetailVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Panel.ZIndex="99">

                        <!-- 어두운 배경 -->
                        <Rectangle Fill="#80000000" MouseDown="DetailBackground_MouseDown" Margin="-32,-78,-33,-32"/>

                        <!-- 하얀 카드 -->
                        <Border Background="#F7F7F7"
                             CornerRadius="25,25,0,0"
                             Margin="-32,326,-33,-32"
                             Padding="24"
                             SnapsToDevicePixels="True">

                            <StackPanel>
                                <!-- 상단 핸들 -->
                                <Rectangle Height="6" Width="60" Fill="LightGray" RadiusX="3" RadiusY="3"
                                    HorizontalAlignment="Center" Margin="0,0,0,12"/>

                                <!-- 근무 요약 -->
                                <TextBlock Text="근무 요약" FontWeight="Bold" FontSize="18" Margin="0,5,0,15"/>

                                <Border Background="White" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock Text="근무 유형" Foreground="Gray" Width="80" FontSize="14"/>
                                            <TextBlock Text="{Binding SelectedDayData.Schedule.ShiftType}" FontWeight="SemiBold" FontSize="14"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock Text="근무 시간" Foreground="Gray" Width="80" FontSize="14"/>
                                            <TextBlock FontSize="14">
                             <Run Text="{Binding SelectedDayData.Schedule.StartTime}" />
                             <Run Text=" - " />
                             <Run Text="{Binding SelectedDayData.Schedule.EndTime}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="그룹" Foreground="Gray" Width="80" FontSize="14"/>
                                            <TextBlock Text="{Binding SelectedDayData.Schedule.GroupName}" FontSize="14"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- 출퇴근 기록 -->
                                <TextBlock Text="출퇴근 기록" FontWeight="Bold" FontSize="18" Margin="0,5,0,15"/>

                                <Border Background="White" CornerRadius="10" Padding="12">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <Image Source="/Resources/images/check_green.png" Width="20" Height="20" Margin="0,0,6,0"/>
                                            <TextBlock FontSize="14">
                         <Run Text="출근 시각 "/>
                         <Run Text="{Binding SelectedDayData.Attendance.ClockInTime}" FontWeight="SemiBold"/>
                         <Run Text=" 출근 완료"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" >
                                            <Image Source="/Resources/images/check_green.png" Width="20" Height="20" Margin="0,0,6,0"/>
                                            <TextBlock FontSize="14">
                         <Run Text="퇴근 시각 "/>
                         <Run Text="{Binding SelectedDayData.Attendance.ClockOutTime}" FontWeight="SemiBold"/>
                         <Run Text=" 퇴근 완료"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
