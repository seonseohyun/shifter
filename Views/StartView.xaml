<Page x:Name="StartView1" x:Class="ShifterUser.Views.StartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d"
      Background="White" Width="400" Height="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 로고 -->
            <RowDefinition Height="Auto"/>
            <!-- 슬로건 -->
            <RowDefinition Height="Auto"/>
            <!-- 로그인 버튼 -->
            <RowDefinition Height="Auto"/>
            <!-- 회원가입 버튼 -->
            <RowDefinition Height="*"/>
            <!-- 여백 -->
            <RowDefinition Height="Auto"/>
            <!-- Copyright -->
        </Grid.RowDefinitions>

        <!-- 로고 -->

        <!-- 슬로건 -->
        <TextBlock
                   Text="당신의 하루를 잇다"
                   FontSize="14"
                   FontWeight="Medium"
                   FontFamily="Noto Sans KR"
                   Foreground="#2A2A2A"
                   HorizontalAlignment="Center"
                   Margin="0,448,0,42" Grid.RowSpan="2"/>

        <!-- 로그인 버튼 -->
        <Button Grid.Row="2"
                Content="로그인"
                FontSize="15"
                FontFamily="Noto Sans KR Medium"
                Foreground="White"
                Background="#007BFF"
                Margin="20,4,20,8"
                Height="52"
                Command="{Binding GoToLoginCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="26">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- 회원가입 버튼 -->
        <Button Grid.Row="3"
                Content="회원가입"
                FontSize="15"
                FontFamily="Noto Sans KR Medium"
                Foreground="Black"
                Background="#EEF3FB"
                Margin="20,0,20,0"
                Height="52"
                Command="{Binding GoToSignUpCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="26">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Copyright -->
        <TextBlock Grid.Row="5"
                   FontSize="10"
                   Foreground="Gray"
                   FontFamily="Noto Sans KR"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"><Run Text="Copyright 2025."/><Run Language="ko-kr" Text="LMS 6th Fighting! "/><Run Text="All Rights Reserved."/></TextBlock>
        <Image Margin="243,130,12,203" Source="/Resources/images/calender.png" Stretch="Fill"/>
        <Image Grid.Row="0"
               Source="/Resources/images/Logo.png"
               Width="350"
               
               Margin="17,100,0,7"
               HorizontalAlignment="Left" Grid.RowSpan="2"
               />
    </Grid>
</Page>
