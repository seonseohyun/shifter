<Page x:Class="ShifterUser.Views.HandoverPopupView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="400"
      Background="White"
      FontFamily="Noto Sans KR"
      Title="HandoverPopupView">

    <Grid>
        <!-- 반투명 오버레이 -->
        <Rectangle Fill="#80000000"/>

        <!-- 카드 -->
        <Border Width="380" Padding="20" CornerRadius="20"
                Background="White"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                 Height="362">
            <StackPanel>
                <!-- 아이콘 -->
                <Image Width="56" Height="56" Margin="0,0,0,12"
                       HorizontalAlignment="Center"
                       Source="/Resources/images/check_green.png"/>

                <!-- 타이틀 -->
                <TextBlock Text="인수인계 등록 완료!" FontSize="20" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,6"/>

                <!-- 서브텍스트 -->
                <TextBlock Text="인수인계가 성공적으로 등록되었어요."
                           FontSize="15" Foreground="#666"
                           TextAlignment="Center" Margin="0,0,0,14"/>

                <!-- 회색 정보 카드 -->
                <Border Background="#F5F5F5" CornerRadius="12" Padding="12" Margin="0,0,0,14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="작성자" Foreground="#8A8A8A" FontSize="13"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Author}" FontSize="14"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="등록일" Foreground="#8A8A8A" FontSize="13" Margin="0,6,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="14" Margin="0,6,0,0"
                                   Text="{Binding RegisterDate, StringFormat={}{0:yyyy.MM.dd}}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="소속" Foreground="#8A8A8A" FontSize="13" Margin="0,6,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TeamName}" FontSize="14" Margin="0,6,0,0"/>
                    </Grid>
                </Border>

                <!-- 하단 버튼 2개 -->
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="바로 보기"
        Width="163" Height="44" FontFamily="Noto Sans KR"
        BorderBrush="#007AFF" BorderThickness="1" Background="White" Foreground="#007AFF"
        FontWeight="SemiBold" FontSize="16"
        Command="{Binding ViewNowCommand}" Margin="0,0,6,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="20"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1" Style="{StaticResource RoundedBlueButtonStyle}" Content="확인"
                            Command="{Binding ConfirmCommand}" Margin="6,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
