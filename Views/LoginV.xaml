<Page x:Class="ShifterUser.Views.LoginV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="clr-namespace:ShifterUser.ViewModels"
      xmlns:helpers="clr-namespace:ShifterUser.Helpers"
      mc:Ignorable="d"
      Background="White"
      Width="400" Height="800"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단바 -->
            <RowDefinition Height="4*"/>
            <!-- 로고 -->
            <RowDefinition Height="2*"/>
            <!-- 슬로건 -->
            <RowDefinition Height="7*"/>
            <!-- 입력/버튼 -->
        </Grid.RowDefinitions>

        <!-- 상단 바 -->
        <Grid Grid.Row="0" Background="#007BFF" Height="45" Margin="0,0,0,201" Grid.RowSpan="2">
            <Button Content="＜"
                    Command="{Binding GoBackCommand}"
                    Width="40" Height="40"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="16"
                    Foreground="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- 로고 -->

        <!-- 슬로건 -->
        <TextBlock Grid.Row="2"
                   Text="당신의 하루를 잇다"
                   FontSize="14"
                   FontFamily="Noto Sans KR"
                   FontWeight="Medium"
                   Foreground="#2A2A2A"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Margin="0,30,0,0"/>

        <!-- 입력 및 버튼 -->
        <StackPanel Grid.Row="3" Margin="20,0,20,0" VerticalAlignment="Top">

            <!-- 아이디 -->
            <Border CornerRadius="24" Background="#F1F3F5" Margin="0,0,0,12">
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource BlueWatermarkTextBoxStyle}"
                         Tag="아이디"
                         Height="52"
                         Margin="4,0,0,0"/>
            </Border>

            <!-- 비밀번호 -->
            <Border CornerRadius="24" Background="#F1F3F5" Margin="0,0,0,20">
                <Grid>
                    <PasswordBox
                        helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        FontFamily="Noto Sans KR"
                        Foreground="#2A2A2A"
                        Padding="12,0,0,0"
                        VerticalContentAlignment="Center"
                        Height="48"
                        PasswordChar="●"
                        FocusVisualStyle="{x:Null}"/>

                    <TextBlock Text="비밀번호"
                               FontSize="14"
                               FontFamily="Noto Sans KR"
                               Foreground="#007BFF"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Password, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- 로그인 버튼 -->
            <Button Content="로그인"
                    Command="{Binding LogInCommand}"
                    FontSize="15"
                    FontFamily="Noto Sans KR Medium"
                    Foreground="White"
                    Background="#007BFF"
                    BorderThickness="0"
                    Height="52"
                    Margin="0,0,0,30">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="26">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- 회원가입 안내 -->
            <Button Command="{Binding GoToSignUpCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="13"
                           FontFamily="Noto Sans KR">
                    <Run Text="계정이 없나요? " Foreground="#A7A7A7"/>
                    <Run Text="회원가입" Foreground="#007BFF" TextDecorations="Underline" Cursor="Hand"/>
                </TextBlock>
            </Button>
        </StackPanel>
        <Image Grid.Row="1"
               Source="/Resources/images/Logo.png"
               Width="250"
               Height="250"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,100,0,0"/>
    </Grid>
</Page>
