<Page x:Class="ShifterUser.Views.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:ShifterUser.Converters"
      mc:Ignorable="d"
      FontFamily="Noto Sans KR"
      Width="400" Height="800"
      Background="White"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextRenderingMode="ClearType"
      TextOptions.TextFormattingMode="Display">

    <Page.Resources>
        <conv:BooleanToAlertIconConverter x:Key="AlertIconConverter"/>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
    </Page.Resources>

    <Grid>
        <!-- 상단 바 -->
        <Border Background="#007BFF" Height="56" VerticalAlignment="Top">
            <Grid>
                <!-- 타이틀 -->
                <TextBlock Text="하루고리"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>

                <!-- 알림 아이콘 + 빨간 점 -->
                <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" Width="24" Height="24">
                    <Image Source="/Resources/images/bell_on.png"
                           Width="20" Height="20"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Ellipse Width="8" Height="8" Fill="Red"
                             HorizontalAlignment="Right" VerticalAlignment="Top"
                             Visibility="{Binding HasAlert, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 콘텐츠 -->
        <StackPanel Margin="16,72,16,16">

            <!-- 출퇴근 카드 -->
            <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#DDD" BorderThickness="1" Effect="{StaticResource ShadowEffect}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Image Source="/Resources/images/qr_icon.png" Width="32" Height="32" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="2025.07.30" FontSize="12" Foreground="Gray"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="출근 완료" FontSize="14" FontWeight="Bold"/>
                                <Ellipse Width="8" Height="8" Fill="Green" Margin="4,6,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Button Content="QR 체크하러 가기" Height="44" Margin="0,8,0,0"
                            Background="#007BFF" Foreground="White" FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="22"
                                        Effect="{StaticResource ShadowEffect}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- 그룹 활동 -->
            <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#DDD" BorderThickness="1" Effect="{StaticResource ShadowEffect}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="그룹 활동 보기" FontSize="14" FontWeight="Bold"/>
                        <Image Source="/Resources/images/arrow_right.png" Width="12" Height="12"
                               HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <Border CornerRadius="12" Background="#F7F7F7" BorderBrush="#CCC" BorderThickness="1" Height="36">
                        <TextBox Text="응급실 A팀" BorderThickness="0" Padding="8,0" VerticalContentAlignment="Center" Background="Transparent"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Button Content="공지사항 보기" Width="120" Height="36" Margin="0,0,8,0"
                                BorderBrush="#007BFF" BorderThickness="1" Background="White" Foreground="#007BFF" FontWeight="SemiBold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="18" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="인수인계 보기" Width="120" Height="36" Background="#007BFF" Foreground="White" FontWeight="SemiBold" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="18" Background="#007BFF">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 이번 주 스케줄 -->
            <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#DDD" BorderThickness="1" Effect="{StaticResource ShadowEffect}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="이번 주 스케줄" FontSize="14" FontWeight="Bold"/>
                        <Image Source="/Resources/images/arrow_right.png" Width="12" Height="12" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <UniformGrid Columns="7">
                        <!-- 요일/근무 -->
                        <StackPanel>
                            <TextBlock Text="월" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="D" FontWeight="Bold" Foreground="#007BFF" TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="화" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="N" FontWeight="Bold" Foreground="#007BFF" TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="수" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="N" FontWeight="Bold" Foreground="#007BFF" TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="목" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="E" FontWeight="Bold" Foreground="#007BFF" TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="금" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="O" FontWeight="Bold" Foreground="#007BFF" TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="토" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="-" FontWeight="Bold" Foreground="Gray" TextAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="일" Background="#EEF6FF" Padding="20,5" TextAlignment="Center"/>
                            <TextBlock Text="-" FontWeight="Bold" Foreground="Gray" TextAlignment="Center"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- 근무 요청 -->
            <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,0"
                    BorderBrush="#DDD" BorderThickness="1" Effect="{StaticResource ShadowEffect}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="근무 요청 현황" FontSize="14" FontWeight="Bold"/>
                        <Image Source="/Resources/images/arrow_right.png" Width="12" Height="12" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Image Source="/Resources/images/check_green.png" Width="14" Height="14"/>
                            <TextBlock Text=" 승인 2건" Margin="4,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Image Source="/Resources/images/pending.png" Width="14" Height="14"/>
                            <TextBlock Text=" 대기 1건" Margin="4,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/images/cancel_red.png" Width="14" Height="14"/>
                            <TextBlock Text=" 반려 1건" Margin="4,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
