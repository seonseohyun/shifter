<Page x:Class="Shifter.Views.ChkChgReqView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shifter.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="ChkChgReqView"
      Background="#FFFFFF"
      FontFamily="Noto Sans KR"
      Loaded="Page_Loaded"
      >

    <Page.Resources>
        <!-- 색상 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#002EFF"/>
        <SolidColorBrush x:Key="OverlayBrush" Color="#80000000"/>
        <SolidColorBrush x:Key="CardBgBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FieldBgBrush" Color="#F7F7F7"/>
        <SolidColorBrush x:Key="FieldBorderBrush" Color="#E0E0E0"/>

        <!-- 버튼: 둥근 모서리 카드형 템플릿 -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                            CornerRadius="12"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 기본/세컨더리 버튼 프리셋 -->
        <Style x:Key="PrimaryButton" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style x:Key="SecondaryButton" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
    </Page.Resources>



    <Grid Background="White">
        <Border Margin="50" Background="#F7F7F7" CornerRadius="30" BorderBrush="#E0E0E0" BorderThickness="0" Padding="20">
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    ShadowDepth="5"
                    BlurRadius="10"
                    Opacity="0.5">
                </DropShadowEffect>
            </Border.Effect>
            <StackPanel Margin="15">

                <!-- 소제목 -->
                <Grid>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="스케줄 변경 요청사항" Style="{StaticResource TitleTextBlockStyle}"
                               VerticalAlignment="Center"/>
                    <Border Grid.Column="1"
                            CornerRadius="22"
                            Background="#444444"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            Margin="0,7,0,7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>


                            <!--＜ > -->
                            <Button Grid.Column="0"
                                Content="＜"
                                    Width="35" Height="35" Padding="0,0,0,5"  
                                    FontSize="15" FontWeight="Bold" Foreground="#FFFFFF"
                                    Background="Transparent" HorizontalAlignment="Left"
                                    VerticalAlignment="Center" Grid.ColumnSpan="2"
                                    Command="{Binding MinusMonthCommand}"    
                                    BorderBrush="Transparent">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <TextBlock Grid.Column="1" Text="{Binding YearMonth}"
                                       FontSize="20" FontFamily="Noto Sans KR"
                                       FontWeight="Medium" VerticalAlignment="Center" Foreground="#FFFFFF"
                                       TextAlignment="Center" Grid.ColumnSpan="2" 
                                       ></TextBlock>

                            <Button Content=">" Grid.Column="1"
                                Width="35" Height="35" Padding="0,0,0,4"  
                                FontSize="20" FontWeight="Bold"
                                Background="Transparent" Foreground="#FFFFFF"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" 
                                Command="{Binding PlusMonthCommand}"    
                                BorderBrush="Transparent" Grid.ColumnSpan="2" Margin="252,0,0,0"
                                >
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>

                </Grid>


                <!-- 설명 텍스트 -->
                <TextBlock Text="이벤트 관련 수정 요청사항을 확인할 수 있습니다." FontSize="15" Foreground="#383838" Margin="0,0,0,20"/>

                <ScrollViewer Height="600" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Scr}" >
                        <ItemsControl.ItemTemplate>
                            <!-- 하나의 카드 항목 -->
                            <DataTemplate>
                                <Border Margin="10" Background="White" 
                                        CornerRadius="10" BorderBrush="#E0E0E0" 
                                        BorderThickness="0" Padding="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <!-- 날짜 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 교대 변경 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 직원 이름 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 설명 텍스트 -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- 반려 버튼 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 승인 버튼 -->
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>


                                        <!--동적구성 -->
                                        <!-- 날짜 라벨 -->
                                        <Border Grid.Column="0" Background="#000000" CornerRadius="5" Margin="0,0,5,0" Width="100" >
                                            <TextBlock Text="{Binding RequestDate, StringFormat=yyyy.MM.dd}" Foreground="White" Padding="5,2" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                                        </Border>
                                        <!-- 교대 변경 라벨 -->
                                        <Border Grid.Column="1" Background="#000000" CornerRadius="5" Margin="0,0,5,0" Width="100" >
                                            <TextBlock Text="{Binding DesireShift}" Foreground="White" Padding="5,2" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                                        </Border>

                                        <!-- 직원 이름 라벨 -->
                                        <Border Grid.Column="2" Background="#000000" CornerRadius="5" Margin="0,0,5,0" Width="100"  >
                                            <TextBlock Text="{Binding StaffName}" Foreground="White" Padding="5,2" FontSize="12" FontWeight="Bold"  HorizontalAlignment="Center" />
                                        </Border>

                                        <!-- 설명 + 상태를 같은 칸(컬럼 3)에서 좌/우로 배치 -->
                                        <Grid Grid.Column="3" Margin="5,0" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <!-- 이유 (늘어나는 영역) -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- 상태 라벨 -->
                                            </Grid.ColumnDefinitions>

                                            <!-- 설명 텍스트 -->
                                            <TextBlock Grid.Column="0" Text="{Binding Reason}" TextWrapping="Wrap" FontSize="12" Foreground="#666666"/>

                                            <!-- 상태 라벨: pending 아닐 때만 보이기 -->
                                            <TextBlock Grid.Column="1"
                                               Text="{Binding StatusKo}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               Foreground="#888"
                                               FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CanAct}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>

                                        <!-- 반려 버튼 -->
                                        <Button Grid.Column="4" Width="150" Content="반려" BorderBrush="#002EFF" BorderThickness="1" Background="Transparent" Foreground="#0078D4"  Padding="10,5" Margin="5,0"
                                             Command="{Binding DataContext.OpenWriteRejectReasonCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                             CommandParameter="{Binding}" IsEnabled="{Binding CanAct}">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <!-- 승인 버튼 -->
                                        <Button Grid.Column="5" Width="150" Content="승인" Background="#002EFF" Foreground="White" Padding="10,5"  Command="{Binding DataContext.ApproveCommand,
                                             RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" IsEnabled="{Binding CanAct}">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- -->


        <!-- 반려사유 입력 모달 -->
        <Grid Visibility="{Binding IsWriteVisible, Converter={StaticResource BoolToVis}}"
      Panel.ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 오버레이 -->
            <Rectangle Fill="{StaticResource OverlayBrush}">
                <Rectangle.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding ClosePopupCommand}"/>
                </Rectangle.InputBindings>
            </Rectangle>

            <!-- 센터 카드 -->
            <Border Width="720"
            Background="{StaticResource CardBgBrush}"
            CornerRadius="20"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="18" ShadowDepth="0" Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="반려 사유 입력"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="#111"/>

                        <Button Grid.Column="1"
                        Content="✕"
                        Width="36" Height="36"
                        Background="Transparent"
                        Foreground="#666"
                        BorderBrush="Transparent"
                        Command="{Binding ClosePopupCommand}"/>
                    </Grid>

                    <!-- 라벨 -->
                    <TextBlock Grid.Row="2"
                       Text="사유"
                       FontSize="13"
                       Foreground="#666"
                       Margin="2,0,0,6"/>

                    <!-- 입력 필드 (플레이스홀더 포함) -->
                    <Border Grid.Row="4"
                    Background="{StaticResource FieldBgBrush}"
                    BorderBrush="{StaticResource FieldBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="12">
                        <Grid>
                            <TextBox x:Name="RejectReasonBox"
                             Text="{Binding RejectReason, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             Height="140"
                             MaxLength="200"/>

                            <!-- 플레이스홀더 -->
                            <TextBlock IsHitTestVisible="False"
                               Margin="4,2,4,0"
                               Foreground="#9E9E9E"
                               FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=RejectReasonBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=RejectReasonBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=RejectReasonBox}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, ElementName=RejectReasonBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=RejectReasonBox}" Value="1">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- 카운터 -->
                    <TextBlock Grid.Row="5"
                       HorizontalAlignment="Right"
                       Foreground="#9E9E9E"
                       FontSize="12"
                       Text="{Binding ElementName=RejectReasonBox, Path=Text.Length, StringFormat={}{0}/200}"/>

                    <!-- 버튼 -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="취소"
                        Style="{StaticResource SecondaryButton}"
                        Width="96" Height="30"
                        Command="{Binding ClosePopupCommand}"/>
                        <Button Content="반려 진행"
                        Style="{StaticResource PrimaryButton}"
                        Width="120" Height="30"
                        Command="{Binding RejectCommand}"
                        />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 단축키: Enter=확정, Esc=닫기 -->
            <Grid.InputBindings>
                <KeyBinding Key="Escape" Command="{Binding ClosePopupCommand}"/>
                <KeyBinding Key="Enter" Command="{Binding RejectCommand}"/>
            </Grid.InputBindings>
        </Grid>

        <!-- -->

    </Grid>
</Page>
