<Page x:Class="Shifter.Views.ChkChgReqView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shifter.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="ChkChgReqView"
      Background="#FFFFFF"
      FontFamily="Noto Sans KR">


    <Grid Background="White">
        <Border Margin="50" Background="#F7F7F7" CornerRadius="30" BorderBrush="#E0E0E0" BorderThickness="0" Padding="20">
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    ShadowDepth="5"
                    BlurRadius="10"
                    Opacity="0.5">
                </DropShadowEffect>
            </Border.Effect>
            <StackPanel Margin="15">

                <!-- 소제목 -->
                <Grid>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="스케줄 변경 요청사항" Style="{StaticResource TitleTextBlockStyle}"
                               VerticalAlignment="Center"/>
                    <Border Grid.Column="1"
                            CornerRadius="22"
                            Background="#444444"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            Margin="0,7,0,7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>


                            <!--＜ > -->
                            <Button Grid.Column="0"
                                Content="＜"
                                    Width="35" Height="35" Padding="0,0,0,5"  
                                    FontSize="15" FontWeight="Bold" Foreground="#FFFFFF"
                                    Background="Transparent" HorizontalAlignment="Left"
                                    VerticalAlignment="Center" Grid.ColumnSpan="2"
                                    Command="{Binding MinusMonthCommand}"    
                                    BorderBrush="Transparent">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <TextBlock Grid.Column="1" Text="{Binding YearMonth}"
                                       FontSize="20" FontFamily="Noto Sans KR"
                                       FontWeight="Medium" VerticalAlignment="Center" Foreground="#FFFFFF"
                                       TextAlignment="Center" Grid.ColumnSpan="2" 
                                       ></TextBlock>

                            <Button Content=">" Grid.Column="1"
                                Width="35" Height="35" Padding="0,0,0,4"  
                                FontSize="20" FontWeight="Bold"
                                Background="Transparent" Foreground="#FFFFFF"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" 
                                Command="{Binding PlusMonthCommand}"    
                                BorderBrush="Transparent" Grid.ColumnSpan="2" Margin="252,0,0,0"
                                >
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>

                </Grid>


                <!-- 설명 텍스트 -->
                <TextBlock Text="이벤트 관련 수정 요청사항을 확인할 수 있습니다." FontSize="15" Foreground="#383838" Margin="0,0,0,20"/>

                <ScrollViewer Height="600" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding []}" >
                        <ItemsControl.ItemTemplate>
                            <!-- 하나의 카드 항목 -->
                            <DataTemplate>
                                <Border Margin="10" Background="White" 
                                        CornerRadius="10" BorderBrush="#E0E0E0" 
                                        BorderThickness="0" Padding="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <!-- 날짜 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 교대 변경 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 직원 이름 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 설명 텍스트 -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- 반려 버튼 -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- 승인 버튼 -->
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>


                                        <!--동적구성 -->
                                        <!-- 날짜 라벨 -->
                                        <Border Grid.Column="0" Background="#000000" CornerRadius="5" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding Date}" Foreground="White" Padding="5,2" FontSize="12" FontWeight="Bold"/>
                                        </Border>
                                        <!-- 교대 변경 라벨 -->
                                        <Border Grid.Column="1" Background="#000000" CornerRadius="5" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding ShiftChange}" Foreground="White" Padding="5,2" FontSize="12" FontWeight="Bold"/>
                                        </Border>

                                        <!-- 직원 이름 라벨 -->
                                        <Border Grid.Column="2" Background="#000000" CornerRadius="5" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding StaffName}" Foreground="White" Padding="5,2" FontSize="12" FontWeight="Bold"/>
                                        </Border>

                                        <!-- 설명 텍스트 -->
                                        <TextBlock Grid.Column="3" Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" Foreground="#666666" VerticalAlignment="Center" Margin="5,0"/>

                                        <!-- 반려 버튼 -->
                                        <Button  Grid.Column="4" Width="150" Content="반려" BorderBrush="#002EFF" BorderThickness="1" Background="Transparent" Foreground="#0078D4" Padding="10,5" Margin="5,0">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <!-- 승인 버튼 -->
                                        <Button Grid.Column="5" Width="150" Content="승인" Background="#002EFF" Foreground="White" Padding="10,5">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>







</Page>
