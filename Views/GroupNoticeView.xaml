<Page x:Class="ShifterUser.Views.GroupNoticeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShifterUser.Views"
      xmlns:helper="clr-namespace:ShifterUser.Helpers"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="400"
      FontFamily="Noto Sans KR" Loaded="Page_Loaded"
      Title="GroupNoticeView">

    <Page.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="Black"
                          ShadowDepth="5"
                          BlurRadius="10"
                          Opacity="0.5"/>

        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#007AFF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                         Background="{TemplateBinding Background}"
                         CornerRadius="10"
                         Padding="10,4"
                         SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3399FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005BBB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>

        <!-- 상단바 -->
        <Border Background="#007AFF" Height="56" VerticalAlignment="Top">
            <Grid>
                <Button Content="＜"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource RoundedBlueButtonStyle}"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 본문 -->
        <Grid Margin="16,6,16,26">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 카드 그림자 배경 -->
            <Border Background="White" CornerRadius="20" Effect="{StaticResource ShadowEffect}" Height="700" Margin="0,68,0,0"/>
            <Border Background="White" CornerRadius="20" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,68,0,0">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 스크롤 콘텐츠 -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <TextBlock Text="그룹 공지사항" FontSize="22" FontWeight="Bold" Margin="10,10,0,0"/>
                            <Grid Margin="12,5,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <TextBlock Text="{Binding TeamName}" FontSize="15" Foreground="Gray"/>
                                    <TextBlock Text=" 공지사항" FontSize="15" Foreground="Gray"/>
                                </StackPanel>
                            </Grid>

                            <!-- 검색 박스 -->
                            <Border Background="#F7F7F7" Margin="0,0,0,20" CornerRadius="20" Height="38">
                                <Grid Height="40">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="133*"/>
                                        <ColumnDefinition Width="34*"/>
                                        <ColumnDefinition Width="0*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Background="Transparent" BorderBrush="Transparent" FocusVisualStyle="{x:Null}" BorderThickness="0"
                                     VerticalContentAlignment="Center" FontSize="15"
                                     Padding="0,0,0,0"
                                     helper:TextBoxHelper.Placeholder="검색" RenderTransformOrigin="0.0,0.5" Margin="12,7,16,3">
                                        <TextBox.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="-0.2"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </TextBox.RenderTransform>
                                    </TextBox>
                                    <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" Margin="10,0,0,0">
                                        <Image Source="/Resources/images/search.png"
                                       HorizontalAlignment="Left" VerticalAlignment="Center" Width="28"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- 요청 리스트 → 공지 리스트 -->
                            <ItemsControl ItemsSource="{Binding Notices}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Margin="5,0,5,10"
                                            Padding="10">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick"
                                                Command="{Binding DataContext.OpenDetailCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"/>
                                            </Border.InputBindings>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 제목 / 작성자 / 날짜 -->
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="Bold" Margin="0,3,0,10"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding StaffName}" FontSize="13" Foreground="Gray"/>
                                                        <TextBlock Text=" · " FontSize="13" Foreground="Gray"/>
                                                        <TextBlock Text="{Binding NoticeDate}" FontSize="13" Foreground="Gray"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>



</Page>
