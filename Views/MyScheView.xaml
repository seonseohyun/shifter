<Page x:Class="ShifterUser.Views.MyScheView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ShifterUser.Helpers"
      xmlns:converters="clr-namespace:ShifterUser.Converters"
      Background="White" FontFamily="Noto Sans KR" Width="400" Height="800"
      Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="ShiftDayBrush"   Color="#FFB300"/>
        <!-- Day: 골드 -->
        <SolidColorBrush x:Key="ShiftEveBrush"   Color="#26A69A"/>
        <!-- Eve: 청록 -->
        <SolidColorBrush x:Key="ShiftNightBrush" Color="#283593"/>
        <!-- Night: 남색 -->
        <SolidColorBrush x:Key="ShiftOffBrush"   Color="#757575"/>
        <!-- Off: 다크그레이 -->

        <!-- 컨버터 -->
        <converters:ShiftToBrushConverter x:Key="ShiftToBrushConverter"
                                          DayBrush="{StaticResource ShiftDayBrush}"
                                          EveBrush="{StaticResource ShiftEveBrush}"
                                          NightBrush="{StaticResource ShiftNightBrush}"
                                          OffBrush="{StaticResource ShiftOffBrush}"/>
        <converters:ShiftToCodeConverter x:Key="ShiftToCodeConverter"/>
        <!-- 내장 컨버터 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>


    <Grid Width="400" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 바 -->
        <DockPanel Grid.Row="0" Background="#007AFF">
            <Button Content="&lt;" Width="40"
                    Command="{Binding GoBackCommand}"
                    Background="Transparent" 
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    DockPanel.Dock="Left" 
                    HorizontalAlignment="Left"/>
        </DockPanel>

        <!-- 근무 통계 -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding ScheduleSummaryText}" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   FontSize="13"
                   FontWeight="Bold"
                   Foreground="Black"/>

        <!-- 월 표시 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Button Content="&lt;" Grid.Column="0"
                    Command="{Binding PreviousMonthCommand}"
                    Background="Transparent" BorderThickness="0" FontSize="16"/>

            <TextBlock Text="{Binding CurrentMonthText}"
                       Grid.Column="1"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontWeight="Bold"
                       />

            <Button Content="&gt;" Grid.Column="2"
                    Command="{Binding NextMonthCommand}"
                    Background="Transparent" BorderThickness="0" FontSize="16"/>
        </Grid>

        <!-- 요일 -->
        <UniformGrid Grid.Row="3" Columns="7">
            <TextBlock Text="일" HorizontalAlignment="Center" Foreground="Red" />
            <TextBlock Text="월" HorizontalAlignment="Center"/>
            <TextBlock Text="화" HorizontalAlignment="Center" />
            <TextBlock Text="수" HorizontalAlignment="Center"/>
            <TextBlock Text="목" HorizontalAlignment="Center"/>
            <TextBlock Text="금" HorizontalAlignment="Center"/>
            <TextBlock Text="토" HorizontalAlignment="Center" Foreground="Blue"/>
        </UniformGrid>

        <ItemsControl Grid.Row="4" ItemsSource="{Binding Days}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.DayClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}"
                    BorderThickness="0"
                    Background="Transparent"
                    Padding="0"
                    IsEnabled="{Binding IsWrited}">
                        <Border BorderBrush="LightGray"
                        BorderThickness="0.5"
                        CornerRadius="1"
                        Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="LightGray"/>
                                    <Setter Property="BorderThickness" Value="0.5"/>
                                    <!-- 오늘인 셀은 테두리 강조 -->
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsToday}" Value="True">
                                            <Setter Property="BorderBrush" Value="#007AFF"/>
                                            <Setter Property="BorderThickness" Value="1.5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Width="110" Height="110">
                                <!-- 날짜 숫자 + 오늘 배지 -->
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,3,0,0">
                                    <!-- 오늘 배지(동그라미) -->
                                    <Border Width="20" Height="20"
                                    CornerRadius="10"
                                    Background="#007AFF"
                                    Visibility="{Binding IsToday, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <!-- 날짜 숫자 -->
                                    <TextBlock Text="{Binding DayText}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                        <TextBlock.ToolTip>
                                            <ToolTip Content="{Binding Date, StringFormat={}{0:yyyy.MM.dd}}"/>
                                        </TextBlock.ToolTip>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Style.Triggers>
                                                    <!-- 오늘이면 흰 글자 (배지 위) -->
                                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <!-- 근무 칩 -->
                                <Border CornerRadius="0"
                                Margin="0,7,0,50"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Padding="4,2"
                                Background="{Binding ShiftType, Converter={StaticResource ShiftToBrushConverter}}"
                                Visibility="{Binding HasShift, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding ShiftType, Converter={StaticResource ShiftToCodeConverter}}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       Margin="2,0,0,0"
                                       VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.Margin>
                <Thickness Bottom="80"/>
            </ItemsControl.Margin>
        </ItemsControl>

        <!-- 팝업 배경 + 카드 -->
        <Grid Grid.RowSpan="5"
              Visibility="{Binding IsDetailVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="99">

            <!-- 어두운 배경 -->
            <Rectangle Fill="#80000000"
                       MouseDown="DetailBackground_MouseDown"/>

            <!-- 하얀 카드 -->
            <Border Background="#F7F7F7"
                    CornerRadius="25,25,0,0"
                    VerticalAlignment="Bottom"
                    Height="360"
                    Margin="0"
                    Padding="24"
                    SnapsToDevicePixels="True">

                <StackPanel>
                    <!-- 상단 핸들 -->
                    <Rectangle Height="6" Width="60" Fill="LightGray" RadiusX="3" RadiusY="3"
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>

                    <!-- 근무 요약 -->
                    <TextBlock Text="근무 요약" FontWeight="Bold" FontSize="18" Margin="0,5,0,15"/>

                    <Border Background="White" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="근무 유형" Foreground="Gray" Width="80" FontSize="14"/>
                                <TextBlock Text="{Binding SelectedDayData.Schedule.ShiftType}" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="근무 시간" Foreground="Gray" Width="80" FontSize="14"/>
                                <TextBlock FontSize="14">
                                    <Run Text="{Binding SelectedDayData.Schedule.StartTime}" />
                                    <Run Text=" - " />
                                    <Run Text="{Binding SelectedDayData.Schedule.EndTime}" />
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="그룹" Foreground="Gray" Width="80" FontSize="14"/>
                                <TextBlock Text="{Binding SelectedDayData.Schedule.GroupName}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 출퇴근 기록 -->
                    <TextBlock Text="출퇴근 기록" FontWeight="Bold" FontSize="18" Margin="0,5,0,15"/>

                    <Border Background="White" CornerRadius="10" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Image Source="/Resources/images/check_green.png" Width="20" Height="20" Margin="0,0,6,0"/>
                                <TextBlock FontSize="14">
                                <Run Text="출근 시각 "/>
                                <Run Text="{Binding SelectedDayData.Attendance.ClockInTime}" FontWeight="SemiBold"/>
                                <Run Text=" 출근 완료"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" >
                                <Image Source="/Resources/images/check_green.png" Width="20" Height="20" Margin="0,0,6,0"/>
                                <TextBlock FontSize="14">
                                <Run Text="퇴근 시각 "/>
                                <Run Text="{Binding SelectedDayData.Attendance.ClockOutTime}" FontWeight="SemiBold"/>
                                <Run Text=" 퇴근 완료"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
