<Page x:Class="ShifterUser.Views.MyInfoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helpers="clr-namespace:ShifterUser.Helpers"
      mc:Ignorable="d"
      Background="White"
      FontFamily="Noto Sans KR"
      d:DesignHeight="800" d:DesignWidth="400"
      Title="MyInfoView"
      Loaded="Page_Loaded">

    <Page.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
        <SolidColorBrush x:Key="LabelBrush" Color="#8A8A8A"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#E6E6E6"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- 작은 파란 버튼 -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Background" Value="#007AFF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3399FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005BBB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 둥근 파란 버튼 -->
        <Style x:Key="RoundedBlueButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="#007AFF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3399FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005BBB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 상단바 -->
        <Border Background="#007AFF" Height="56" VerticalAlignment="Top">
            <Grid>
                <Button Content="＜" Command="{Binding GoBackCommand}" Width="40" Height="40"
                        Background="Transparent" BorderBrush="Transparent" FontSize="16" FontWeight="Bold"
                        Foreground="White" HorizontalAlignment="Left" Style="{StaticResource RoundedBlueButtonStyle}"
                        VerticalAlignment="Center" Margin="4,0,0,0"/>
                <TextBlock Text="내정보" Foreground="White" FontSize="16" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 본문 카드 -->
        <Grid Margin="16,72,16,26">
            <Border Background="White" CornerRadius="20" Effect="{StaticResource ShadowEffect}"/>
            <Border Background="White" CornerRadius="20" BorderBrush="#DDDDDD" BorderThickness="1">
                <DockPanel LastChildFill="True" Margin="16">

                    <!-- 아래 고정: 로그아웃 -->
                    <Border DockPanel.Dock="Bottom" Margin="0,24,0,8" CornerRadius="22" Height="48" Background="#007AFF">
                        <Button Content="로그아웃" Background="Transparent" BorderThickness="0" Foreground="White"
                                FontWeight="Bold" FontSize="16" Style="{StaticResource RoundedBlueButtonStyle}"
                                Command="{Binding LogoutCommand}"/>
                    </Border>

                    <!-- 프로필 (이미지 + 이름) -->
                    <StackPanel DockPanel.Dock="Top" Margin="0,12,0,16" HorizontalAlignment="Center">

                        <!-- 아바타 레이어드 컨테이너 -->
                        <Grid Width="180" Height="180">
                            <!-- 뒤: 흰 바탕 + 그림자 -->
                            <Border Background="White" CornerRadius="50" Effect="{StaticResource ShadowEffect}"/>

                            <!-- 중간: 파란 톤 배경판 -->
                            <Border Background="#F6F8FF" CornerRadius="50"/>

                            <!-- 앞: 캐릭터 이미지 -->
                            <Image Source="/Resources/images/girl.png"
                               Stretch="Uniform"
                               Margin="12"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Grid>

                        <!-- 이름 -->
                        <TextBlock Text="{Binding Name}"
                         FontSize="20" FontWeight="Bold"
                         Margin="0,25,0,10"
                         HorizontalAlignment="Center"/>
                    </StackPanel>


                    <!-- 정보 테이블 -->
                    <Grid DockPanel.Dock="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 회사 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 직급 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 연락처 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 아이디 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 비밀번호 -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,5,0,5"
                                   Text="회사"  FontSize="15" Foreground="{StaticResource LabelBrush}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Company, FallbackValue=회사}" VerticalAlignment="Center" FontSize="15"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5,0,5"
                                   Text="직급" FontSize="15" Foreground="{StaticResource LabelBrush}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="15"
                                   Text="{Binding Position, FallbackValue=직급}" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,5,0,5" FontSize="15"
                                   Text="연락처" Foreground="{StaticResource LabelBrush}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" FontSize="15"
                                   Text="{Binding PhoneNumber, FallbackValue=전화번호}" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,5,0,5" FontSize="15"
                                   Text="아이디" Foreground="{StaticResource LabelBrush}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="15"
                                   Text="{Binding Id, FallbackValue=아이디}" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,5,0,5" FontSize="15"
                                    Text="비밀번호" Foreground="{StaticResource LabelBrush}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" FontSize="15"
                                    Text="{Binding PasswordMask}" Foreground="{StaticResource LabelBrush}" VerticalAlignment="Center"/>
                        <Button Grid.Row="4" Grid.Column="2" Content="비밀번호 변경"
                                HorizontalAlignment="Right" Style="{StaticResource BlueButtonStyle}"
                                Command="{Binding OpenChangePasswordCommand}"/>         
                    </Grid>

                </DockPanel>
            </Border>
        </Grid>

        <!-- 비밀번호 변경 팝업 -->
        <Grid Visibility="{Binding IsPwPopupVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.RowSpan="2" Fill="#80000000">
                <Rectangle.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding ClosePwPopupCommand}"/>
                </Rectangle.InputBindings>
            </Rectangle>

            <Border Background="White" CornerRadius="24,24,0,0" Padding="20,16,20,24"
                    Margin="0,446,0,0">
                <StackPanel>
                    <Rectangle Height="6" Width="64" Fill="#E0E0E0" RadiusX="3" RadiusY="3"
                               HorizontalAlignment="Center" Margin="0,0,0,14"/>
                    <TextBlock Text="비밀번호 변경" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,18,0,-10"/>

                    <Border Background="#F5F5F5" CornerRadius="12" Padding="14" Margin="0,35,0,-20" Height="120">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,4">
                                <TextBlock Text="현재 비밀번호 " Width="120" VerticalAlignment="Center"/>
                                <PasswordBox Width="180"
                                             helpers:PasswordBoxHelper.BindPassword="True"
                                             helpers:PasswordBoxHelper.BoundPassword="{Binding CurrentPw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,4">
                                <TextBlock Text="새 비밀번호 " Width="120" VerticalAlignment="Center"/>
                                <PasswordBox Width="180"
                                             helpers:PasswordBoxHelper.BindPassword="True"
                                             helpers:PasswordBoxHelper.BoundPassword="{Binding NewPw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="새 비밀번호 확인 " Width="120" VerticalAlignment="Center"/>
                                <PasswordBox Width="180"
                                             helpers:PasswordBoxHelper.BindPassword="True"
                                             helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Button Content="저장하기"
                            Style="{StaticResource RoundedBlueButtonStyle}"
                            Height="48"
                            Margin="0,50,0,0"
                            Command="{Binding SavePasswordCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
