<Page x:Class="ShifterUser.Views.GroupHandoverView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShifterUser.Views"
      xmlns:helper="clr-namespace:ShifterUser.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="400"
      Background="White"
      FontFamily="Noto Sans KR"
      Loaded="Page_Loaded">

    <Page.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="Black"
                          ShadowDepth="5"
                          BlurRadius="10"
                          Opacity="0.5"/>
        

        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#007AFF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
              
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                         Background="{TemplateBinding Background}"
                         CornerRadius="10"
                         Padding="10,4"
                         SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3399FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005BBB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Gray"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 상단바 -->
        <Border Background="#007AFF" Height="56" VerticalAlignment="Top">
            <Grid>
                <Button Content="＜"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource RoundedBlueButtonStyle}"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 본문 -->
        <Grid Margin="16,6,16,26">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 카드 그림자 배경 -->
            <Border Background="White" CornerRadius="20" Effect="{StaticResource ShadowEffect}" Height="700" Margin="0,68,0,0"/>
            <Border Background="White" CornerRadius="20" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,68,0,0">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 스크롤 콘텐츠 -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <TextBlock Text="인수인계 기록함" FontSize="22" FontWeight="Bold" Margin="10,10,0,0"/>
                            <Grid Margin="12,5,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <TextBlock Text="{Binding TeamName}" FontSize="15" Foreground="Gray"/>
                                    <TextBlock Text=" 인수인계" FontSize="15" Foreground="Gray"/>
                                </StackPanel>
                                <ComboBox Grid.Column="1" Width="113" Height="25"
                                          FontSize="14"
                                          ItemsSource="{Binding HandoverTypes}"
                                          SelectedItem="{Binding SelectedHandoverType}"
                                          Margin="0,0,5,0"
                                          VerticalAlignment="Center"/>
                            </Grid>

                            <!-- 검색 박스 -->
                            <Border Background="#F7F7F7" Margin="0,0,0,20" CornerRadius="20" Height="38">
                                <Grid Height="40">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="133*"/>
                                        <ColumnDefinition Width="34*"/>
                                        <ColumnDefinition Width="0*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Background="Transparent" BorderBrush="Transparent" FocusVisualStyle="{x:Null}" BorderThickness="0"
                                             VerticalContentAlignment="Center" FontSize="15"
                                             Padding="0,0,0,0"
                                             helper:TextBoxHelper.Placeholder="작성자, 업무명 등" RenderTransformOrigin="0.0,0.5" Margin="12,5,16,5">
                                        <TextBox.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="-0.2"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </TextBox.RenderTransform>
                                    </TextBox>
                                    <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" Margin="10,0,0,0">
                                        <Image Source="/Resources/images/search.png"
                                               HorizontalAlignment="Left" VerticalAlignment="Center" Width="28"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- 인수인계 리스트 -->
                            <ItemsControl ItemsSource="{Binding HandoverList}" Width="320">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Margin="0,0,0,12" Padding="12">
                                            <StackPanel>
                                                <!-- 상단: 날짜 + 작성자 + 상세보기 버튼 -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ShiftDate}" FontWeight="Bold" FontSize="14"/>
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="8,0,0,0"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="1"
                                                            CornerRadius="10"
                                                            Background="#007AFF"
                                                            VerticalAlignment="Center">
                                                        <Button Content="상세보기"
                                                                Background="Transparent"
                                                                Foreground="White"
                                                                BorderThickness="0"
                                                                Style="{StaticResource BlueButtonStyle}"
                                                                Command="{Binding DataContext.ShowHandoverDetailCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                CommandParameter="{Binding}"/>
                                                    </Border>
                                                </Grid>

                                                <!-- 하단: 태그 + 제목 -->
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <Border Background="{Binding ShiftTypeTag, Converter={StaticResource HandoverTypeToColorConverter}}"
                                                            CornerRadius="10" Padding="8,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding ShiftTypeTag}" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Title}" FontSize="13" Foreground="Gray" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 작성 버튼 -->
                    <Border Grid.Row="1" Margin="0,10,0,10" CornerRadius="22" Background="#007AFF" Height="44">
                        <Button Content="인수인계 작성하기"
                                Style="{StaticResource RoundedBlueButtonStyle}"
                                Command="{Binding GoToWriteHandoverCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="17"
                                FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
