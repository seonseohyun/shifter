<Page x:Class="ShifterUser.Views.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="clr-namespace:ShifterUser.ViewModels"
      xmlns:helpers="clr-namespace:ShifterUser.Helpers"
      xmlns:converters="clr-namespace:ShifterUser.Converters"
      mc:Ignorable="d"
      Background="White"
      Width="400" Height="800">

    <Page.Resources>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="246*"/>
            <!-- 로고 -->
            <RowDefinition Height="81*"/>
            <RowDefinition Height="42*"/>
            <!-- 슬로건 -->
            <RowDefinition Height="431*"/>
            <!-- 입력/버튼 -->
        </Grid.RowDefinitions>


        <!-- 슬로건 -->
        <TextBlock Grid.Row="3"
                   Text="당신의 하루를 잇다"
                   FontSize="14"
                   FontFamily="Noto Sans KR"
                   FontWeight="Medium"
                   Foreground="#2A2A2A"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,9,0,0"
                   Height="20" Width="110"/>

        <!-- 입력 및 버튼 -->
        <StackPanel Grid.Row="4" Margin="20,28,20,0" VerticalAlignment="Top" Height="237">

            <!-- 아이디 -->
            <Border CornerRadius="24" Background="#EEF3FB" Margin="0,0,0,12">
                <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource BlueWatermarkTextBoxStyle}"
                         Tag="아이디"
                         Height="52"
                         Margin="4,0,0,0"/>
            </Border>

            <!-- 비밀번호 -->
            <Border CornerRadius="24" Background="#EEF3FB" Margin="0,0,0,20">
                <Grid>
                    <PasswordBox
                        helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                        helpers:PasswordBoxHelper.BindPassword="True"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        FontFamily="Noto Sans KR"
                        Foreground="#2A2A2A"
                        Padding="12,0,0,0"
                        VerticalContentAlignment="Center"
                        Height="48"
                        PasswordChar="●"
                        FocusVisualStyle="{x:Null}"/>

                    <TextBlock Text="비밀번호"
                               FontSize="14"
                               FontFamily="Noto Sans KR"
                               Foreground="#007AFF"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Password, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- 로그인 버튼 -->
            <Button Content="로그인"
                    Command="{Binding LogInCommand}"
                    FontSize="15"
                    FontFamily="Noto Sans KR Medium"
                    Foreground="White"
                    Background="#007AFF"
                    BorderThickness="0"
                    Height="52"
                    Margin="0,0,0,30">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="26">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- 회원가입 안내 -->
            <Button Command="{Binding GoToInfoCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="13"
                           FontFamily="Noto Sans KR">
                    <Run Text="하루고리에 대해 궁금하신가요? " Foreground="#A7A7A7"/>
                    <Run Text="알아보기" Foreground="#007AFF" TextDecorations="Underline" Cursor="Hand"/>
                </TextBlock>
            </Button>
        </StackPanel>

        <!-- 로고 이미지 -->
        <Image Margin="257,109,19,79" Grid.Row="1" Source="/Resources/images/calender.png" Stretch="Fill" Grid.RowSpan="2"/>
        <Image Grid.Row="1"
               Source="/Resources/images/Logo.png"
               Width="300"
               Height="300"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="40,100,0,0"
               RenderTransformOrigin="0.503,0.762"
               Grid.RowSpan="4"/>
    </Grid>
</Page>
