<Page x:Class="Shifter.Views.MngEmpStartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shifter.Views"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1600"
      Title="MngEmpStartView"
      Background="#FFFFFF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        
        <!-- 좌측패널 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Text" Margin="5"
                       FontSize="20" FontFamily="Noto Sans KR" FontWeight="Bold"
                       Foreground="#000000" Background="Transparent"></TextBlock>

            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Button MinHeight="30" Content="Button" Margin="5,2,5,2"
                        Foreground="#000000" Background="#F7F7F7" BorderBrush="Transparent"
                        FontSize="17" FontFamily="Noto Sans KR" FontWeight="Medium">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button MinHeight="30" Content="Button" Margin="5,2,5,2"
                        Foreground="#000000" Background="#F7F7F7" BorderBrush="Transparent"
                        FontSize="17" FontFamily="Noto Sans KR" FontWeight="Medium">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            
        </Grid>

        
        <!-- 우측패널 -->
        <Grid Grid.Column="1" Margin="60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 직원정보 새로등록 -->
                    <Border Grid.Column="0"
                            Margin="0,0,10,0"
                            Background="#F4F4F4"
                            CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              ShadowDepth="5"
                                              BlurRadius="10"
                                              Opacity="0.5">
                            </DropShadowEffect>
                        </Border.Effect>
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Title" FontSize="35" FontFamily="Noto Sans KR" FontWeight="Bold"></TextBlock>
                                <TextBlock Grid.Row="1" Text="Loren" FontSize="20" FontFamily="Noto Sans KR" FontWeight="Medium"></TextBlock>
                            </Grid>

                            <Image Grid.Row="1" Source="/Resources/Icons/Character_2.png"></Image>

                            <Button Grid.Row="2" Foreground="#FFFFFF" Background="#002EFF" Margin="0,10,0,10"
                                    Content="Text"
                                    FontSize="20" FontFamily="Noto Sans KR" FontWeight="Bold">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 등록된 직원 관리 -->
                    <Border Grid.Column="1"
                            Margin="0,0,10,0"
                            Background="#F4F4F4"
                            CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              ShadowDepth="5"
                                              BlurRadius="10"
                                              Opacity="0.5">
                            </DropShadowEffect>
                        </Border.Effect>
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Title" FontSize="35" FontFamily="Noto Sans KR" FontWeight="Bold"></TextBlock>
                                <TextBlock Grid.Row="1" Text="Loren" FontSize="20" FontFamily="Noto Sans KR" FontWeight="Medium"></TextBlock>
                            </Grid>

                            <Image Grid.Row="1" Source="/Resources/Icons/Character_1.png"></Image>

                            <Button Grid.Row="2" Foreground="#FFFFFF" Background="#002EFF" Margin="0,10,0,10"
                                    Content="Text"
                                    FontSize="20" FontFamily="Noto Sans KR" FontWeight="Bold">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>

                </Grid>

                <Grid Grid.Row="1" Margin="30,0,30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" 
                            Foreground="#FFFFFF" Background="#002EFF" 
                            Margin="0,5,0,5" Content="다음 >" FontSize="20" FontFamily="Noto Sans KR" FontWeight="Bold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
