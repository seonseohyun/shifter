<Page x:Class="ShifterUser.Views.SignUpView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="clr-namespace:ShifterUser.ViewModels"
      xmlns:helpers="clr-namespace:ShifterUser.Helpers"
      mc:Ignorable="d"
      Background="White"
      Width="400" Height="800">

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 바 -->
            <RowDefinition Height="Auto"/>
            <!-- 로고 + 벨 -->
            <RowDefinition Height="10"/>
            <!-- 여백 -->
            <RowDefinition Height="Auto"/>
            <!-- 슬로건 -->
            <RowDefinition Height="*"/>
            <!-- 입력/버튼 -->
        </Grid.RowDefinitions>

        <!-- 상단 바 -->
        <Grid Grid.Row="0" Background="#007BFF" Height="50">
            <Button Content="＜"
                    Command="{Binding GoBackCommand}"
                    Width="40" Height="40"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="16"
                    Foreground="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- 로고 + 벨 -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 로고 -->

            <!-- 벨 아이콘 -->
            <Image Source="/Resources/images/bell.png"
                   Width="163"
                   Height="106"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,37,4,0"/>
            <Image Source="/Resources/images/Logo.png"
                   Width="305"
                   Height="300"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="21,0,0,0"/>
        </Grid>

        <!-- 슬로건 -->
        <TextBlock Grid.Row="1"
                   Text="당신의 하루를 잇다"
                   FontSize="14"
                   FontFamily="Noto Sans KR"
                   FontWeight="Medium"
                   Foreground="#2A2A2A"
                   HorizontalAlignment="Center"
                   Margin="0,250,0,10"/>

        <!-- 입력 및 버튼 -->
        <StackPanel Grid.Row="4" Margin="20,0,20,10" VerticalAlignment="Top">
            <!-- 이름 -->
            <Border CornerRadius="24" Background="#EEF3FB" Margin="0,0,0,12">
                <TextBox Text="{Binding name, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource BlueWatermarkTextBoxStyle}"
                         Tag="이름"
                         Height="52"
                         Margin="4,0,0,0"/>
            </Border>

            <!-- 아이디 -->
            <Border CornerRadius="24" Background="#EEF3FB" Margin="0,0,0,12">
                <TextBox Text="{Binding id, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource BlueWatermarkTextBoxStyle}"
                         Tag="아이디"
                         Height="52"
                         Margin="4,0,0,0"/>
            </Border>

            <!-- 비밀번호 -->
            <Border CornerRadius="24" Background="#EEF3FB" Margin="0,0,0,12">
                <TextBox Text="{Binding password, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource BlueWatermarkTextBoxStyle}"
                         Tag="비밀번호"
                         Height="52"
                         Margin="4,0,0,0"/>
            </Border>

            <!-- 휴대전화 -->
            <Border CornerRadius="24" Background="#EEF3FB" Margin="0,0,0,20">
                <TextBox Text="{Binding phone, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource BlueWatermarkTextBoxStyle}"
                         Tag="휴대전화"
                         Height="52"
                         Margin="4,0,0,0"/>
            </Border>

            <!-- 회원가입 버튼 -->
            <Button Content="회원가입"
                    Command="{Binding SignUpCommand}"
                    FontSize="15"
                    FontFamily="Noto Sans KR Medium"
                    Foreground="White"
                    Background="#007BFF"
                    BorderThickness="0"
                    Height="52"
                    Margin="0,0,0,12">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="26">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- 로그인 안내 -->
            <Button Command="{Binding GoToLoginCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0,0,0,0">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="13"
                           FontFamily="Noto Sans KR">
                    <Run Text="이미 계정이 있나요? " Foreground="#A7A7A7"/>
                    <Run Text="로그인" Foreground="#007BFF" TextDecorations="Underline" Cursor="Hand"/>
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
