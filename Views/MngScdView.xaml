<Page x:Class="Shifter.Views.MngScdView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shifter.Views"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1600"
      Background="#FFFFFF"
      Title="MngScdView"
      FontFamily="Noto">

    <Grid>
        <!-- Main Border -->
        <Border Margin="60" CornerRadius="30" Background="#F7F7F7">
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    ShadowDepth="5"
                    BlurRadius="10"
                    Opacity="0.5">
                </DropShadowEffect>
            </Border.Effect>
            <!-- PanelGrid -->
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>

                <!-- Title Grid -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <!-- Main Title -->
                    <TextBlock Grid.Row="0" Text="{Binding TeamName}" 
                               Style="{StaticResource TitleTextBlockStyle}" 
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="0,0,0,0"/>

                    <!-- Sub Title -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <!-- CompanyName -->
                        <Border Grid.Column="0" Margin="0 ,0,3,0" Style="{StaticResource KeywordBorderStyle}">
                            <TextBlock Text="{Binding CompanyName}" FontWeight="Medium"
                                       Style="{StaticResource KeyworkdTextBlockStyle}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <!-- TeamName -->
                        <Border Grid.Column="1" Margin="3,0,3,0" Style="{StaticResource KeywordBorderStyle}">
                            <TextBlock Text="{Binding TeamName}" FontWeight="Medium"
                                       Style="{StaticResource KeyworkdTextBlockStyle}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <!-- AdminName -->
                        <Border Grid.Column="2" Margin="3,0,3,0" Style="{StaticResource KeywordBorderStyle}">
                            <TextBlock Text="{Binding AdminName}" FontWeight="Medium"
                                        Style="{StaticResource KeyworkdTextBlockStyle}" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <!-- yyyy-MM -->
                        <Border Grid.Column="3" Margin="3,0,3,0" Style="{StaticResource KeywordBorderStyle}">
                            <TextBlock Text="{Binding CurrentMonth, StringFormat=0월}" FontWeight="Medium"
                                       Style="{StaticResource KeyworkdTextBlockStyle}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>

                <!-- yyyy-MM selecting Button, Export(Share), ChkChgReqButton, MdfButton -->
                <Grid Grid.Row="1" Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <!-- 공백 -->
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="0.56*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>

                    <!-- yyyy-MM selecting Button -->
                    <Border Background="#4E4E4E" CornerRadius="17" Margin="0,5,0,0">
                        <!--MinusMonthButton, yyyy-MM Text, PlusButton-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <!-- ＜ Button -->
                            <Button Grid.Column="0" Content="＜" 
                                    Foreground="#FFFFFF" Background="Transparent"
                                    BorderBrush="Transparent" BorderThickness="0"
                                    Command="{Binding MinusMonthCommand}"
                                    FontWeight="Bold">
                            </Button>
                            <!-- yyyy-MM TextBlock -->
                            <TextBlock Grid.Column="1" Text="{Binding YearMonth}" 
                                       Foreground="#FFFFFF" FontWeight="Medium"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <!-- ＞ Button -->
                            <Button Grid.Column="2" Content="＞" 
                                    Command="{Binding PlusMonthCommand}"
                                    Background="Transparent"
                                    Foreground="#FFFFFF"
                                    BorderBrush="Transparent"/>
                        </Grid>
                    </Border>
                    <!-- Export(Share) Button -->
                    <Button Grid.Column="2" Command="{Binding ExportCommand}"
                            Background="#002EFF" BorderBrush="Transparent"
                            BorderThickness="0" Padding="8" Margin="0,0,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                        <Image
                            Source="/Resources/Icons/Share.png">
                        </Image>
                    </Button>
                    <!-- ChkChgReqButton -->
                    <Button Grid.Column="3" Content="수정요청확인" Margin="10,0,5,0" 
                            Command="{Binding GoToChkChgReqCommand}" 
                            FontWeight="Medium" FontFamily="Noto Sans KR" FontSize="15"
                            Foreground="#002EFF" Background="Transparent"
                            BorderBrush="#002EFF" BorderThickness="2">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <!-- MdfButton -->
                    <Button Grid.Column="4" Content="스케쥴수정" Margin="5,0,5,0"
                            Style="{StaticResource SmallRoundedBlueButtonStyle}"
                            FontWeight="Medium" FontFamily="Noto Sans KR"
                            Command="{Binding GoToMdfScdCommand}"/>
                </Grid>
            
                <!-- Schedule Table -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 날짜 헤더 -->
                        <RowDefinition Height="*"/>
                        <!-- 본문 스케줄 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 하단 합계 -->
                    </Grid.RowDefinitions>
                    
                    <!-- 날짜 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,5">
                        <Border Width="80" Height="28" Background="Transparent"/>
                        <ItemsControl ItemsSource="{Binding Days}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="28" Height="28" Background="Transparent" Margin="0,0,1.05,0">
                                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- ▶ 우측 헤더 추가 구간 -->
                        <StackPanel Orientation="Horizontal" Margin="4,0,0,0">
                            <Border Width="60" Height="28" Background="Transparent">
                                <TextBlock Text="근무시간" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Border>
                            <Border Width="60" Height="28" Background="Transparent">
                                <TextBlock Text="잔여시간" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            </Border>

                            <!-- Total Shift 헤더 -->
                            <ItemsControl ItemsSource="{Binding ShiftHeaders}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="36" Height="28" Background="Transparent" Margin="1,0">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Bottom"
                                                       TextWrapping="Wrap"
                                                       LineStackingStrategy="BlockLineHeight"
                                                       LineHeight="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>

                    <!-- 본문 스케줄: 조회 전용 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding StaffSchedules}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">

                                        <!-- 직원 이름 -->
                                        <Border Width="80" Height="28" Margin="1" CornerRadius="5"
                  BorderBrush="LightGray" BorderThickness="1" Background="#F5F5F5">
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>

                                        <!-- 일자별 셀 -->
                                        <ItemsControl ItemsSource="{Binding DailyShifts}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="26" Height="26" Margin="1.5"
                        BorderBrush="LightGray" BorderThickness="1" Background="#FFFFFF">
                                                        <TextBlock Text="{Binding ShiftCode}"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- 우측 개인 집계 -->
                                        <StackPanel Orientation="Horizontal" Margin="2,0,0,0">
                                            <Border Width="60" Height="26" BorderBrush="LightGray" BorderThickness="1" Margin="1,0">
                                                <TextBlock Text="{Binding TotalWorkingHours}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <Border Width="60" Height="26" BorderBrush="LightGray" BorderThickness="1" Margin="1,0">
                                                <TextBlock Text="{Binding TotalEmptyDays}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ItemsControl ItemsSource="{Binding ShiftCodeCounts}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Width="36" Height="26" BorderBrush="LightGray" BorderThickness="1" Margin="1,0">
                                                            <TextBlock Text="{Binding Value}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 하단 일별 합계 -->
                    <ScrollViewer Grid.Row="2" Margin="0,10,0,0" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ShiftHeaders}" Margin="0,6,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <!-- 왼쪽 라벨 -->
                                        <Border Width="80" Height="26" CornerRadius="4" Background="#303030">
                                            <TextBlock Text="{Binding ShiftCode}" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <!-- 오른쪽: 일별 카운트 -->
                                        <ItemsControl ItemsSource="{Binding DataContext.DailyStatistics, RelativeSource={RelativeSource AncestorType=Page}}"
                        Tag="{Binding ShiftCode}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="26" Height="26" Margin="1.5"
                        BorderBrush="LightGray" BorderThickness="1" Background="White">
                                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock.Text>
                                                                <MultiBinding Converter="{StaticResource ShiftCountLookup}">
                                                                    <Binding/>
                                                                    <!-- DailyShiftStats -->
                                                                    <Binding Path="Tag"
                                 RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
