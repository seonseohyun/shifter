<Page x:Class="ShifterUser.Views.DetailScheView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:ShifterUser.Converters"
      mc:Ignorable="d"
      Background="#F0F2F5"
      Width="400" Height="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- 상단 바 -->
            <RowDefinition Height="40"/>
            <!-- 근무 통계 -->
            <RowDefinition Height="40"/>
            <!-- 월 표시 -->
            <RowDefinition Height="40"/>
            <!-- 요일 -->
            <RowDefinition Height="*"/>
            <!-- 달력 -->
        </Grid.RowDefinitions>

        <!-- [1] 상단바 -->
        <DockPanel Grid.Row="0" Background="#007BFF">
            <Button Content="&lt;" Width="40"
                    Command="{Binding GoBackCommand}"
                    Background="Transparent" 
                    BorderThickness="0"
                    FontSize="16" 
                    Foreground="White"
                    DockPanel.Dock="Left" 
                    HorizontalAlignment="Left"/>
        </DockPanel>

        <!-- [2] 근무 통계 (TextBlock 사용) -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding ScheduleSummaryText}" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   FontSize="13"
                   FontWeight="Bold"
                   FontFamily="Noto Sans KR"
                   Foreground="Black"
                   Margin="10,0,0,0"/>

        <!-- [3] 월 표시 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Button Content="&lt;" Grid.Column="0"
                    Command="{Binding PreviousMonthCommand}"
                    Background="Transparent" BorderThickness="0" FontSize="16"/>

            <TextBlock Text="{Binding CurrentMonthText}"
                       Grid.Column="1"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontFamily="Noto Sans KR"/>

            <Button Content="&gt;" Grid.Column="2"
                    Command="{Binding NextMonthCommand}"
                    Background="Transparent" BorderThickness="0" FontSize="16"/>
        </Grid>

        <!-- [4] 요일 -->
        <UniformGrid Grid.Row="3" Columns="7">
            <TextBlock Text="일" HorizontalAlignment="Center" Foreground="Red" FontFamily="Noto Sans KR"/>
            <TextBlock Text="월" HorizontalAlignment="Center" FontFamily="Noto Sans KR"/>
            <TextBlock Text="화" HorizontalAlignment="Center" FontFamily="Noto Sans KR"/>
            <TextBlock Text="수" HorizontalAlignment="Center" FontFamily="Noto Sans KR"/>
            <TextBlock Text="목" HorizontalAlignment="Center" FontFamily="Noto Sans KR"/>
            <TextBlock Text="금" HorizontalAlignment="Center" FontFamily="Noto Sans KR"/>
            <TextBlock Text="토" HorizontalAlignment="Center" Foreground="Blue" FontFamily="Noto Sans KR"/>
        </UniformGrid>

        <!-- [5] 달력 + 상세 카드 -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- 달력 공간 (어둡게 처리된 배경) -->
                <RowDefinition Height="280"/>
                <!-- 하단 상세 카드 -->
            </Grid.RowDefinitions>

            <!-- 달력 배경만 보여주는 Placeholder -->
            <Border Grid.Row="0" Background="#E6E6E6" Opacity="0.5" CornerRadius="0"/>

            <!-- 상세 카드 -->
            <Border Grid.Row="1" Background="White" CornerRadius="25,25,0,0" Margin="0"
                    VerticalAlignment="Bottom" Padding="20" >
                <StackPanel>
                    <!-- 근무 요약 -->
                    <TextBlock Text="근무 요약" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="근무 유형" FontWeight="Bold"/>
                        <TextBlock Text="{Binding WorkData.Schedule.ShiftType}" Margin="0,0,0,5"/>

                        <TextBlock Text="근무 시간" FontWeight="Bold"/>
                        <TextBlock>
                            <Run Text="{Binding WorkData.Schedule.StartTime}" />
                            <Run Text=" ~ " />
                            <Run Text="{Binding WorkData.Schedule.EndTime}" />
                        </TextBlock>

                        <TextBlock Text="그룹" FontWeight="Bold"/>
                        <TextBlock Text="{Binding WorkData.Schedule.GroupName}" />
                    </StackPanel>

                    <!-- 출퇴근 기록 -->
                    <TextBlock Text="출퇴근 기록" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Image Source="/Assets/check_icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock>
                                <Run Text="출근 시각 " />
                                <Run Text="{Binding WorkData.Attendance.ClockInTime}" />
                                <Run Text=" 출근 완료" />
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/check_icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock>
                                <Run Text="퇴근 시각 " />
                                <Run Text="{Binding WorkData.Attendance.ClockOutTime}" />
                                <Run Text=" 퇴근 완료" />
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
