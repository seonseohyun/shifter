<Page x:Class="Shifter.Views.MngEmpView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shifter.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="MngEmpView"
      Background="#FFFFFF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- 좌측패널 -->
        <Border Grid.Column="0" BorderBrush="#A7A7A7" BorderThickness="0.5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Height="450" Margin="0,0,0,449" Grid.RowSpan="2" VerticalAlignment="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="직원관리" Margin="5"
                           FontSize="20" FontFamily="Noto Sans KR" FontWeight="Bold"
                           Foreground="#000000" Background="Transparent"></TextBlock>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="임시팀정보" Margin="5"
                           FontSize="20" FontFamily="Noto Sans KR" FontWeight="Bold"
                           Foreground="#000000" Background="Transparent"></TextBlock>
                </Grid>
            </Grid>
        </Border>
    
        <!-- 우측패널 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="30,30,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 검색창 -->
                <Border Grid.Column="0" Background="#F7F7F7"
                        BorderBrush="Transparent" CornerRadius="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Background="Transparent" BorderBrush="Transparent">

                        </TextBox>
                        <Button Grid.Column="1" Background ="Transparent" BorderBrush="Transparent">
                            <Image Margin="15"  Source="/Resources/Icons/magnifying-glass.png"></Image>
                        </Button>
                    </Grid>
                    <Border.Effect>
                        <DropShadowEffect
                            Color="Black"
                            ShadowDepth="5"
                            BlurRadius="10"
                            Opacity="0.5">
                        </DropShadowEffect>
                    </Border.Effect>
                </Border>
                
                <!-- 저장버튼 -->
                <Button Grid.Column="1" Margin="10,0,10,0"
                        Background="#002EFF" Foreground="#FFFFFF"
                        Content="변경사항 저장" FontSize="17" FontFamily="Noto Sans KR"
                        FontWeight="Medium">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
            </Grid>
            <Border Grid.Row="1" Margin="30, 15, 30, 30"
                    Background="#F7F7F7" BorderBrush="Transparent"
                    CornerRadius="30">
                <Border.Effect>
                    <DropShadowEffect
                    Color="Black"
                    ShadowDepth="5"
                    BlurRadius="10"
                    Opacity="0.5">
                    </DropShadowEffect>
                </Border.Effect>
                <WrapPanel Margin="25" Orientation="Vertical">
                    <!-- Text -->
                    <Grid Width="1290" Height="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="팀명" TextAlignment="Left"
                                   FontSize="18" FontFamily="Noto Sans KR" FontWeight="Medium"
                                   Foreground="#222222"/>
                        <TextBlock Grid.Column="1" Text="직원ID" TextAlignment="Left"
                                   FontSize="18" FontFamily="Noto Sans KR" FontWeight="Medium"
                                   Foreground="#222222"/>
                        <TextBlock Grid.Column="2" Text="직원명" TextAlignment="Left"
                                   FontSize="18" FontFamily="Noto Sans KR" FontWeight="Medium"
                                   Foreground="#222222"/>
                        <TextBlock Grid.Column="3" Text="직급" TextAlignment="Left"
                                   FontSize="18" FontFamily="Noto Sans KR" FontWeight="Medium"
                                   Foreground="#222222"/>
                        <TextBlock Grid.Column="4" Text="월별 총근무시간" TextAlignment="Left"
                                   FontSize="18" FontFamily="Noto Sans KR" FontWeight="Medium"
                                   Foreground="#222222"/>
                    </Grid>
                </WrapPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
