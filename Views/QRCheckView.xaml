<Page x:Class="ShifterUser.Views.QRCheckView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White"
      Width="400" Height="800">

    <Grid>
        <!-- 상단 콘텐츠 + 하단 종 이미지 분리 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 상단 콘텐츠 -->
        <ScrollViewer Grid.Row="0"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Hidden">

            <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Top">

                <!-- 상단 네비게이션 바 -->
                <Border Background="#007AFF" Height="48" Width="400">
                    <Button Command="{Binding GoBackCommand}"
                            Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Padding="12,0,0,9" Cursor="Hand">
                        <TextBlock Text="&lt;" FontSize="22" Foreground="White"/>
                    </Button>
                </Border>

                <!-- 카메라 프리뷰 박스 -->
                <Border Width="300" Height="300" BorderBrush="LightGray" BorderThickness="0"
                        CornerRadius="16" Margin="0, 100, 0, 0">
                    <Image x:Name="CameraPreview" Stretch="UniformToFill" />
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                    <TextBlock FontSize="16" VerticalAlignment="Center" Text="QR 인식이 안 되나요? " />
                    <Button 
                    Content="수동 입력" 
                    FontSize="16" 
                    Foreground="White"
                    Background="#007AFF"
                    Padding="4,2"
                    Cursor="Hand"
                    Command="{Binding CheckOutCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="4" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" 
                                           TextDecorations="Underline" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>


                <!-- 출근 버튼 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button Background="Transparent" BorderThickness="0"
            Command="{Binding CheckInCommand}" Cursor="Hand">
                        <Image Source="/Resources/images/pin.png" Width="16" Height="16" Margin="0,0,6,0"/>
                    </Button>
                    <TextBlock Text="하루고리 출퇴근 체크는 본인 인증 후 자동 기록됩니다."
               FontSize="13" Foreground="Gray" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- 하단 고정 종 이미지 -->
        <Grid Grid.Row="1" Height="90" VerticalAlignment="Bottom">
            <Image Source="/Resources/images/bell.png"
                   Width="50" Height="75" HorizontalAlignment="Left" Margin="179,-658,0,673"/>
        </Grid>
    </Grid>
</Page>
