<Page x:Class="ShifterUser.Views.ReqScheView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ShifterUser.Views"
      mc:Ignorable="d"
      Background="#F0F2F5"
      d:DesignWidth="400" d:DesignHeight="800">

    <Page.Resources>
        <!-- DropShadowEffect 정의 -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="Black"
                          Direction="270"
                          ShadowDepth="10"
                          BlurRadius="6"
                          Opacity="0.5"/>
    </Page.Resources>

    <Grid>
        <!-- 반투명 배경 -->
        <Rectangle Fill="#80000000"/>

        <!-- 그림자용 Border Layer -->
        <Border Background="White"
                Width="350"
                Padding="25"
                CornerRadius="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource CardShadow}"/>

        <!--  실제 콘텐츠 Layer -->
        <Border Background="White"
                Width="350"
                Padding="25"
                CornerRadius="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#DDD"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 제목 + 닫기 버튼 -->
                <DockPanel Grid.Row="0" LastChildFill="False">
                    <TextBlock Text="{Binding RequestTitle}"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Width="30" Height="30"
                            Background="Transparent" BorderBrush="Transparent"
                            DockPanel.Dock="Right"
                            Command="{Binding GoBackCommand}">
                        <Image Source="/Resources/images/x.png"
                               Width="24" Height="24"
                               VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </Button>
                </DockPanel>

                <!-- 날짜 선택 -->
                <ComboBox Grid.Row="2" Height="32"
                          SelectedItem="{Binding SelectedDate}"
                          ItemsSource="{Binding AvailableDates}"
                          Margin="0" FontSize="13"
                          VerticalContentAlignment="Center"/>

                <!-- 근무 타입 선택 -->
                <ComboBox Grid.Row="4" Height="32"
                          SelectedItem="{Binding SelectedShiftType}"
                          ItemsSource="{Binding ShiftTypes}"
                          Margin="0" FontSize="13"
                          VerticalContentAlignment="Center"/>

                <!-- 사유 입력란 -->
                <Grid Grid.Row="6">
                    <TextBox x:Name="ReasonTextBox"
                             Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}"
                             Height="32" Padding="8" FontSize="13"
                             Background="White" BorderBrush="#DDD"
                             BorderThickness="1" VerticalContentAlignment="Center"/>
                    <TextBlock Text="사유를 입력하세요"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               FontSize="13"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text, ElementName=ReasonTextBox, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                </Grid>

                <!-- 요청 등록 버튼
                <Button Grid.Row="8"
                        Content="📩 요청 등록하기"
                        Height="40"
                        FontWeight="Bold"
                        FontSize="14"
                        Foreground="White"
                        Background="#007BFF"
                        BorderBrush="Transparent"
                        Command="{Binding RegisterReqCommand}"/> -->
                
                <Border Grid.Row="8"
                    CornerRadius="22"
                    Background="#007BFF"
                    Height="40">
                    <Button Content="📩 요청 등록하기"
                    FontWeight="Bold"
                    FontSize="14"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding RegisterReqCommand}"/>
                </Border>


                <!-- 안내 문구 -->
                <TextBlock Grid.Row="10"
                           Text="근무 요청은 매월 25일 자정까지 가능합니다.&#x0a;승인 여부에 따라 요청이 반영되지 않을 수 있습니다."
                           FontSize="12" Foreground="Gray"
                           TextAlignment="Center" Margin="0,5,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Page>
